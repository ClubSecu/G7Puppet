<!doctype html>
<html>
    <head>
        <title>Monitor</title>
    </head>
    <body>
        <h1><%= @hostname %> - Monitor </h1>
        <div id='main'>
            <table>
                <tr>
                    <td>OS Release : </td>
                    <td><%= @operatingsystemrelease %></td>
                </tr>
                <tr>
                    <td>OS Family : </td>
                    <td><%= @osfamily %></td>
                </tr>
                <tr>
                    <td>Kernel Version : </td>
                    <td><%= @kernelversion %></td>
                </tr>
                <tr>
                    <td>Processor : </td>
                    <td><%= @processor0 %></td>
                </tr>
                <tr>
                    <td>Nb Processors : </td>
                    <td><%= @processorcount %><td>
                </tr>
                <tr>
                    <td>Puppet Version : </td>
                    <td><%= @puppetversion %></td>
                </tr>
                <tr>
                    <td>IP : </td>
                    <td><%= @ipaddress %></td>
                </tr>
                <tr>
                    <td>Uptime : </td>
                    <td><%= @uptime %></td>
                </tr>
                <tr>
                    <td>Memory : </td>
                    <td><%= @memoryfree %>/<%= @memorytotal %></td>
                </tr>
            </table>
            </div>
            <div id='footer'>
                <p>Page generated by : <%= @id %></p>
            </div>
    </body>
</html>
